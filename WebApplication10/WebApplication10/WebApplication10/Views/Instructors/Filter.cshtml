@model WebApplication10.Models.Instructor

@{
    ViewBag.Title = "Filter";
}

<h2>View</h2>


@using (Html.BeginForm("Filter","Instructors",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Instructor</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Last Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.ID, (SelectList)ViewBag.Instructors, "select one", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Start Date", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("StartDate", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessage("StartDate", "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("End Date", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("EndDate", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessage("EndDate", "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Show" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
